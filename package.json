{
	"name": "cmsed",
	"description": "CMSed provides common components for Vibe. Designed to work as a CMS out of box.",
	"copyright": "Copyright Â© 2014, Richard Andrew Cattermole",
	"authors": ["Richard Andrew Cattermole"],
	"license": "MIT",
	"sourcePaths": [],
    "dependencies": {
        "cmsed:base": "~master"
    },
    "targetPath": "bin/liball",
    "subPackages": [
		{
			"name": "livereload",
			"sourcePaths": ["source/livereload/cmsed"],
			"importPaths": ["source/livereload"],
			"dependencies": {
				"dakka": ">=0.0.1",
				"vibe-d": ">=0.7.20"
			},
			"versions": ["VibeCustomMain"],
			"mainSourceFile": "source/livereload/cmsed/livereload/app.d",
			"targetType": "executable",
			"targetPath": "bin/base"
		},
		{
			"name": "base",
			"sourcePaths": ["source/base/cmsed"],
			"importPaths": [
				"source/base",
				"tools/mime",
				"tools/timezone",
				"tools/browser_detection"
			],
			"sourceFiles": [
				"tools/timezone/timezones.d",
				"tools/browser_detection/browser_detection.d",
				"tools/mime/mimetypes.d"
			],
			"stringImportPaths": [
				"views/base",
				"tools/browser_detection",
				"tools/mime",
				"libraries/js"
			],
			"mainSourceFile": "source/base/cmsed/base/main.d",
			"targetType": "library",
			"targetPath": "bin/base",
			"versions": ["VibeCustomMain"],
			"dependencies": {
				"vibe-d": "~master",
				"dvorm": "~master",
				"dvorm:email": "~master",
				"dvorm:vibeproviders": "~master",
				"cmsed:minifier": "~master",
				"ctini": "~master"
			}
		},
		{
			"name": "rebuildtools",
			"targetType": "staticLibrary",
			"preGenerateCommands": [
				"cd tools/timezone && rdmd generator timezones",
				"cd tools/browser_detection && rdmd generator browser_detection",
				"cd tools/mime && rdmd generator mimetypes"
			],
			"sourceFiles": [
				"tools/main.d",
			],
			"sourcePaths": []
		},
		{
			"name": "user",
			"sourcePaths": ["source/user/cmsed"],
			"importPaths": ["source/user"],
			"targetType": "library",
			"targetPath": "bin/user",
			"dependencies": {
				"cmsed:base": "~master",
			}
		},
		{
			"name": "test",
			"sourcePaths": ["source/test/cmsed"],
			"importPaths": ["source/test"],
			"targetType": "executable",
			"targetPath": "bin/test",
            "stringImportPaths": ["views/test"],
			"dependencies": {
				"cmsed:base": "~master",
				"cmsed:user": "~master"
			}
		},
		{
			"name": "minifier",
			"sourcePaths": ["source/minifier/cmsed"],
			"importPaths": ["source/minifier"],
			"targetType": "library",
			"targetPath": "bin/minifier"
		}
	],
	"buildTypes": {
		"docs": {
			"dflags": [
				"-op",
				"-Dddocs",
				"-o-",
				"-c", 
				"-Hdimport"
			],
			"dependencies": {
				"cmsed:base": "~master",
				"cmsed:user": "~master"
			}
		}
	}
}
